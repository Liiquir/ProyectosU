@using Humanizer;
@model IEnumerable<Proyecto_1.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Pagina de administración de clientes</h1>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
<p>
    <a asp-action="Create" class="btn btn-primary">Añadir nuevo cliente</a>
</p>
@using (Html.BeginForm("Index", "Cliente", new { area = "" }, FormMethod.Get))
{
    <div class="form-group">
        <label for="searchId">Buscar por ID:</label>
        <input type="number" name="searchId" id="searchId" class="form-control" value="@ViewBag.CurrentFilter" />
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
}
<br />
<button onclick="window.print()" class="btn btn-primary">Generar reporte</button>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento).Humanize()
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EsAdministrador).Humanize()
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro).Humanize()
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EsAdministrador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
                <td>
                    <a href="@Url.Action("Edit", "Cliente", new { id = item.ID })" class="btn btn-primary">Edit</a>
                    <form method="post" action="@Url.Action("Delete", "Cliente", new { id = item.ID })">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>


                
        </tr>
}
    </tbody>
</table>
