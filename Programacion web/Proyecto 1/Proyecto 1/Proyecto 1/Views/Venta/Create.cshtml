@model Proyecto_1.Models.Venta

@{
    ViewData["Title"] = "Create";
}

<h1>Creación de venta</h1>

<h4>Venta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>@Html.DisplayName("Número orden")</label>
                <input asp-for="NumeroOrden" class="form-control" />
                <span asp-validation-for="NumeroOrden" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Html.DisplayName("Fecha hora venta")</label>               
                <input asp-for="FechaHoraVenta" class="form-control" />
                <span asp-validation-for="FechaHoraVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Html.DisplayName("Nombre plato")</label>
                <input asp-for="NombrePlato" class="form-control" />
                <span asp-validation-for="NombrePlato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Html.DisplayName("Cantidad vendida")</label>
                <input asp-for="CantidadVendida" class="form-control" />
                <span asp-validation-for="CantidadVendida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
